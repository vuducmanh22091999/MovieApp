<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/itemSize_tvSize"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/selector_size"
        android:padding="@dimen/_8sdp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintEnd_toStartOf="@id/itemSize_etAmountSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/itemSize_etAmountSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_8sdp"
        android:background="@drawable/shape_radius_4sdp_blue700"
        android:completionThreshold="1"
        android:hint="@string/title_input_add_amount"
        android:inputType="number"
        android:lines="1"
        android:padding="16dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white80"
        android:textSize="@dimen/_12sdp"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="@id/itemSize_tvSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/itemSize_tvSize"
        app:layout_constraintTop_toTopOf="@id/itemSize_tvSize" />


</androidx.constraintlayout.widget.ConstraintLayout>
