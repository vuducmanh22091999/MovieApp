<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/_8sdp">

    <ImageView
        android:id="@+id/itemTopRateMovie_imgPoster"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_200sdp"
        android:src="@drawable/img_deadpool"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemTopRateMovie_tvTitleNameMovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:text="@string/title_name_movie"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintStart_toEndOf="@id/itemTopRateMovie_imgPoster"
        app:layout_constraintTop_toTopOf="@id/itemTopRateMovie_imgPoster" />

    <TextView
        android:id="@+id/itemTopRateMovie_tvTitleScoreRateMovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_64sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:background="@color/black"
        android:text="@string/title_name_movie"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="@id/itemTopRateMovie_imgPoster"
        app:layout_constraintStart_toStartOf="@id/itemTopRateMovie_imgPoster" />

</androidx.constraintlayout.widget.ConstraintLayout>